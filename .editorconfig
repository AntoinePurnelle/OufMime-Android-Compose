# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
insert_final_newline = false
indent_size = unset

# noinspection EditorConfigKeyCorrectness
[*.{kt, kts}]
ktlint_disabled_rules = import-ordering, no-wildcard-imports, trailing-comma-on-declaration-site, trailing-comma-on-call-site, standard:no-blank-line-before-rbrace

# noinspection EditorConfigKeyCorrectness
[*.gradle.kts]
ktlint_disabled_rules = import-ordering, no-wildcard-imports